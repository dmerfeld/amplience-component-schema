{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dmerfeld/amplience-component-schema/master/test-component-schema.json",

  "definitions": {
    "bgColor": {
      "title": "Background Color",
      "description": "description",
      "type": "string",
      "enum": ["primary", "secondary", "tapestry-red"]
    },

    "textColor": {
      "title": "Text Color",
      "description": "description",
      "type": "string",
      "enum": ["primary", "secondary", "tapestry-red"]
    },

    "font": {
      "title": "The Headline Font",
      "description": "primary font used for this component",
      "type": "string",
      "enum": [
        "'Times New Roman', Times, serif;",
        "Arial, Helvetica, sans-serif"
      ]
    },

    "fontSize": {
      "title": "Font Size",
      "description": "description",
      "type": "string",
      "enum": ["xl", "l", "md", "sm"]
    }
  }
}
