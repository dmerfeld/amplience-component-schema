{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dmerfeld/amplience-component-schema/master/test-component-schema.json",

  "definitions": {
    "bgColor": {
      "title": "Background Color",
      "description": "description",
      "type": "string",
      "enum": ["#000000", "#CC0000", "#00CC00", "#0000CC", "#FFFFFF"]
    },

    "textColor": {
      "title": "Text Color",
      "description": "description",
      "type": "string",
      "enum": ["#FF0000", "#000000", "#CC0000", "#00CC00", "#0000CC", "#FFFFFF"]
    },

    "font": {
      "title": "Font",
      "description": "primary font used for this component",
      "type": "string",
      "enum": [
        "'Times New Roman', Times, serif;",
        "Arial, Helvetica, sans-serif"
      ]
    },

    "fontSize": {
      "title": "Font Size",
      "description": "description",
      "type": "string",
      "enum": ["56", "48", "32", "24", "14"]
    }
  }
}
